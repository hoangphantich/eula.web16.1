    <ul class="main-navigation__menu-content" data-require="base/views/main_navigation">
        {{#each main_menu.items}}
        <li class="main-navigation__menu-content__menu-item">
            <a href="{{url}}" title="">{{text}}</a>
            <ul class="main-navigation__menu-content__sub-menu-container">
                {{#each this.submenu}}
                <li>
                    <a href="{{url}}" title="">{{text}}</a>
                </li>
                {{/each}}
            </ul>
        </li>
        {{/each}}
        <li class="main-navigation__menu-content__menu-item menu-tablet-selector">
            <span class="menu-selector__menu-icon">
                <span>&nbsp;</span>
                <span>&nbsp;</span>
                <span>&nbsp;</span>
